    "framer-motion": "^12.15.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
     "next": "15.5.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind": "^2.3.1",
    "utf-8-validate": "^6.0.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
